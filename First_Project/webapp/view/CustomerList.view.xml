<mvc:View controllerName="first.project.First_Project.controller.CustomerList"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <List headerText="Directions" items="{data>/Customers}">
                <StandardListItem title="{data>CompanyName}" type="Active" press="onPressDetails"/>
            </List>
        </content>
    </Page>
</mvc:View>